{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"args": [
                "--features",
				"bevy/dynamic_linking",
            ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run release",
			"args": [
                "--release",
            ],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
	]
}